<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.base.board.notice.NoticeDAO">
  
  	<sql id="search">
  		<where>
  			<if test="kind == 'title'">
  				TITLE LIKE CONCAT('%', #{search}, '%')
  			</if>
  			<if test="kind == 'content'">
  				CONTENT LIKE CONCAT('%', #{search}, '%')
  			</if>
  			<if test="kind == 'writer'">
  				WRITER LIKE CONCAT('%', #{search}, '%')
  			</if>
  		</where>
  	</sql>
  	
  	<select id="getTotalCount" resultType="Long" parameterType="Pager">
		SELECT COUNT(NUM) FROM NOTICE
		<include refid="search"></include>
	</select>
  
  	<select id="getList" resultType="NoticeVO" parameterType="Pager">
  		SELECT * FROM NOTICE
  		<include refid="search"></include>
  		ORDER BY NUM DESC
  		LIMIT #{startRow}, #{perPage}
  	</select>
  	
  	<select id="getDetail" resultType="BoardVO" parameterType="BoardVO">
  		SELECT * FROM NOTICE
  		WHERE NUM = #{num}
  	</select>
  	
  	<insert id="setInsert" parameterType="BoardVO">
  		INSERT INTO NOTICE (TITLE, CONTENT, WRITER, REGDATE, HIT)
  		VALUES (#{title}, #{content}, #{writer}, now(), 0)
  	</insert>
  	
  	<update id="setUpdate" parameterType="BoardVO">
  		UPDATE NOTICE SET TITLE = #{title}, CONTENT = #{content}
  		WHERE NUM = #{num}
  	</update>
  	
  	<delete id="setDelete" parameterType="BoardVO">
  		DELETE FROM NOTICE WHERE NUM = #{num}
  	</delete>
  	
  </mapper>



